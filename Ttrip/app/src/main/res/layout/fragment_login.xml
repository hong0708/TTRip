<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_back_to_onboarding"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/image_back_to_onboarding"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_title_login"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/image_title_login"
            android:src="@drawable/bg_login_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back_to_onboarding" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/bg_rect_white_radius30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_title_login">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_login_earth"
                android:src="@drawable/bg_login_earth"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_rect_pear_radius10"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:gravity="center"
                android:text="@string/content_login"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_under_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="@string/content_login_line"
                android:layerType="software"
                android:src="@drawable/line_dash_line_dim_grey_transparent30_stroke1_dash_gap10"
                app:layout_constraintBottom_toTopOf="@id/tv_login" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="24dp"
                android:autofillHints="password"
                android:background="@drawable/bg_rect_white_transparent80_radius10"
                android:elevation="10dp"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/iv_under_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="LabelFor"
                tools:text="1234" />

            <TextView
                android:id="@+id/tv_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:text="@string/content_text_password"
                android:textColor="@color/dim_grey"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/et_login_password"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_login_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="20dp"
                android:autofillHints="phone"
                android:background="@drawable/bg_rect_white_transparent80_radius10"
                android:elevation="10dp"
                android:hint="@string/content_hint_password"
                android:inputType="phone"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/tv_login_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:hint="01012345678" />

            <TextView
                android:id="@+id/tv_login_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:text="@string/content_login_id"
                android:textColor="@color/dim_grey"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/et_login_id"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_upper_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="@string/content_login_line"
                android:layerType="software"
                android:src="@drawable/line_dash_line_dim_grey_transparent30_stroke1_dash_gap10"
                app:layout_constraintBottom_toTopOf="@id/tv_login_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/pacifico_regular"
                android:text="@string/content_login_logo"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/iv_upper_line"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>