<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_info_nick_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_user_info_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sc_dream7"
                android:text="@string/content_user_info_nick_name"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_user_info_nick_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:autofillHints=""
                android:hint="@string/content_user_info_nick_name_hint"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_info_nick_name" />

            <TextView
                android:id="@+id/tv_user_info_check_nick_name"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_rect_honey_suckle_radius20"
                android:fontFamily="@font/sc_dream6"
                android:gravity="center"
                android:text="@string/content_user_info_nick_name_check"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/et_user_info_nick_name"
                app:layout_constraintEnd_toEndOf="@id/et_user_info_nick_name"
                app:layout_constraintTop_toTopOf="@id/et_user_info_nick_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_info_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_user_info_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sc_dream7"
                android:text="@string/content_user_info_day"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                app:layout_constraintTop_toBottomOf="@id/tv_user_info_day" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_info_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp">

            <TextView
                android:id="@+id/tv_user_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sc_dream7"
                android:text="@string/content_user_info_sex"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_user_info_sex">

                <TextView
                    android:id="@+id/tv_user_info_sex_girl"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rect_white_radius20"
                    android:backgroundTint="@color/honey_suckle"
                    android:gravity="center"
                    android:text="@string/content_user_info_sex_girl"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_user_info_sex_boy"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rect_white_radius20"
                    android:backgroundTint="@color/honey_suckle"
                    android:gravity="center"
                    android:text="@string/content_user_info_sex_boy"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>